<link rel="stylesheet" href="show.css">

<div class="left-side">
  <div class="profile-container">
      <h3 class="profile-name"><%= @user.name %></h3>
      <p class="profile-image"><%= attachment_image_tag @user, :profile_image, size:"180x180", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></p>
      <p class="profile-edit"><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  </div>

  <div class="book-form">

    <h3>New book</h3>

    <%= form_for(@book) do |f| %>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
      <% end %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create book' %>
    <% end %>

  </div>
</div>

<div class="right-side">

  <table class="books-table">
  　<tr>
     <th></th>
  　　<th>Title</th>
  　　<th>Opinion</th>
    </tr>
    <% @user.books.each do |book| %>
      <div class="table">
        <tr>
          <td></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      </div>
    <% end %>
    </tr>
  </table>
</div>

